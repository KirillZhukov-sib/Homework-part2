<Window x:Class="Lesson_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500">
    <Window.Resources>
        <local:ConvertVisible x:Key="convert"/>
    </Window.Resources>
    <StackPanel>
        <TextBox x:Name="txtbx"  Margin="20,20,20,10"/>
        <CheckBox x:Name="chbx" Content="Показать детали" Margin="20,0,20,20"/>
        
        <StackPanel x:Name="extra" 
                    Visibility="{Binding IsChecked, ElementName=chbx, 
                                Converter={StaticResource convert}}">
            <TextBlock Text="{Binding Path=Text.Length, StringFormat='Длина текста: {0}', ElementName=txtbx }"  Margin="20,0,0,0"/>
            <ProgressBar Value="{Binding Text.Length, ElementName=txtbx, Mode=OneWay}"  Maximum="100" Height="15" Margin="20,10,20,20" />
        </StackPanel>
    </StackPanel>

</Window>
