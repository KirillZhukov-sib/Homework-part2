<Window x:Class="Homework_part2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_part2"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <TextBox 
            Name ="Number1TextBox"
        HorizontalAlignment="Left" 
        Margin="10,10,0,0" 
        TextWrapping="Wrap" 
        Text="TextBox"
        VerticalAlignment="Top" 
        Width="150" 
        Height="20" FontSize="16"/>

        <TextBox  
            Name ="Number2TextBox"
            HorizontalAlignment="Left" 
             Margin="170,10,0,0" 
             TextWrapping="Wrap" 
             Text="TextBox"
             VerticalAlignment="Top" 
             Width="150" 
             Height="20" FontSize="16" Grid.ColumnSpan="2"/>
        <Button 
            Content="+" 
            HorizontalAlignment="Left" 
            Margin="10,40,0,0"
            Width="150" 
            Height="20"
            VerticalAlignment="Top" 
            Click="Button_Click"/>
        <Button 
            Content="-" 
            HorizontalAlignment="Left" 
            Margin="10,70,0,0"
            Width="150" 
            Height="20"
            VerticalAlignment="Top"
            Click="Button_Click"/>

        <Button 
            Content="*" 
            HorizontalAlignment="Left" 
            Margin="170,40,0,0"
            Width="150" 
            Height="20"
            VerticalAlignment="Top" Grid.ColumnSpan="2"
            Click="Button_Click"/>
        <Button 
            Content="/" 
            HorizontalAlignment="Left" 
            Margin="170,70,0,0"
            Width="150" 
            Height="20"
            VerticalAlignment="Top" 
            Grid.ColumnSpan="2"
            Click="Button_Click"/>
        <TextBlock 
            Name ="Result"
            HorizontalAlignment="Left" 
                   Margin="143,110,0,0"
                   Text="Результат: 0" 
                   VerticalAlignment="Top"/>
    </Grid>
</Window>
